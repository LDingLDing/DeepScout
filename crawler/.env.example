# 服务器配置
CRAWLER_PORT=3002
CRAWLER_HOST=0.0.0.0

# API配置
API_URL=http://localhost:3001/api/v1

# DeepSeek API配置
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_API_URL=https://api.deepseek.com

# 爬虫配置
CRAWLER_POOL_SIZE=5
CRAWLER_TIMEOUT=30000
CRAWLER_WAIT_TIME=1000
CRAWLER_ENABLE_SCREENSHOT=true
CRAWLER_ENABLE_PROXY=false
CRAWLER_PROXY_LIST=http://proxy1.example.com:8080,http://proxy2.example.com:8080
CRAWLER_REQUEST_INTERVAL=2000
CRAWLER_UA_ROTATION=true

# 调度器配置
SCHEDULER_PULL_INTERVAL=60000
SCHEDULER_CONCURRENT_TASKS=3
SCHEDULER_MAX_RETRIES=3

# 日志级别
LOG_LEVEL=info
