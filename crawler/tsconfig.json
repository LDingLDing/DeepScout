{
  "extends": "../tsconfig.paths.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "declaration": true,
    "baseUrl": "../"
  },
  "references": [
    {
      "path": "../staff/backend"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 